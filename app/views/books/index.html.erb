<% if user_signed_in? %>

  <table class="table table-hover table-bordered">
    <thead class="table-dark">
      <tr>
        <th>First Name</th>
        <th>Author Name</th>
        <th>Library Name</th>
        <th>Email ID</th>
        <th>Phone No.</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>
      <% if book.user == current_user %>
      <tr>
      <td><%= link_to book.book_name, book %></td>
      <td><%= book.author_name %></td>
      <td><%= book.lib_name %></td>
      <td><%= book.email %></td>
      <td><%= book.phone %></td>
      <td><%= button_to "Delete", book, method: :delete, class:"btn btn-danger" %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
  </table>

  <%= link_to 'Add Book', new_book_path, class:"btn btn-dark" %>

<% else %>

<h1>Welcome to Book Store.</h1>
This is my 1st rails project.

<% end %>

